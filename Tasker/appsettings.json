{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "TaskerContextConnection": "Server=(localdb)\\mssqllocaldb;Database=Tasker;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "IdentityServer": {
    "Clients": {
      "Tasker": {
        "Profile": "IdentityServerSPA"
      }
    },
    // https://docs.microsoft.com/en-us/aspnet/core/security/authentication/identity-api-authorization?view=aspnetcore-3.0#deploy-to-production
    // The store name represents the name of the certificate store where the certificate is stored.
    // The store location represents where to load the certificate from (CurrentUser or LocalMachine).
    // The name property on certificate corresponds with the distinguished subject for the certificate.
    "Key": {
      "Type": "Store",
      "StoreName": "My", // In Windows, "My" is the "Personal" certificate directory.
      "StoreLocation": "LocalMachine",
      "Name": "CN=DorSh-LP.corp.votiro.com"
    }
  },
  "AllowedHosts": "*"
}